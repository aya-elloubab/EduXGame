<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subjectCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="?attr/colorPrimary">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Course Chapters Badge -->
        <TextView
            android:id="@+id/courseChapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_label_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="17 Chapters"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Subject Title -->
        <TextView
            android:id="@+id/subjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseChapters"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Mathematics"
            android:textColor="?attr/colorOnBackground"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <!-- Subject Description -->
        <TextView
            android:id="@+id/subjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectTitle"
            android:layout_marginTop="8dp"
            android:text="Explore advanced math concepts and problem-solving techniques."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:textAlignment="center"
            android:lineSpacingExtra="2dp" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/subjectProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectDescription"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="0%"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/subjectProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/subjectProgressText"
            android:layout_marginTop="8dp"
            android:progress="0"
            android:max="100"
            android:progressTint="?attr/colorPrimary"
            android:backgroundTint="@android:color/darker_gray" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
